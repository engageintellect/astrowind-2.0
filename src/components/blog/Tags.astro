---
import { getPermalink } from '~/utils/permalinks';

import { BLOG } from '~/config.mjs';
import type { Post } from '~/types';

export interface Props {
  tags: Post['tags'];
  class?: string;
}

const { tags, class: className = 'text-sm' } = Astro.props;
---

{
  tags && Array.isArray(tags) && (
    <ul class={className}>
      {tags.map((tag) => (
        <li class="bg-stone-100 dark:bg-stone-700 inline-block mr-2 mb-2 py-0.5 px-2 rounded-full lowercase font-medium shadow-md">
          {BLOG?.tag?.disabled ? (
            tag
          ) : (
            <a
              href={getPermalink(tag, 'tag')}
              class="text-muted dark:text-stone-300 hover:text-primary dark:hover:text-stone-200"
            >
              {tag}
            </a>
          )}
        </li>
      ))}
    </ul>
  )
}
